<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <!--<ScrollView-->

    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll1"
            android:background="#465295"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.taxialeairy.provider.Utilities.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:padding="16dp"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/text_color_white"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:visibility="visible"
            />
        <com.taxialeairy.provider.Utilities.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_login"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_icon"
                android:visibility="gone"/>



            <TextView
                android:id="@+id/title_txt"
                android:text="@string/recover_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/layout_new"
                android:layout_marginBottom="8dp">

                <com.taxialeairy.provider.Utilities.MyEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/email_validation"
                    android:textAlignment="viewStart"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:drawableStart="@drawable/icon_password"
                    android:background="@color/transparent"/>
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/otp_lay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/layout_new">

                <com.taxialeairy.provider.Utilities.MyEditText
                    android:id="@+id/otp"
                    android:inputType="numberPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/otp"
                    android:textAlignment="viewStart"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:background="@color/transparent"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/new_password_lay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/layout_new">

                <com.taxialeairy.provider.Utilities.MyEditText
                    android:id="@+id/confirm_password"
                    android:inputType="textWebPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_your_password"
                    android:textAlignment="viewStart"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:drawableStart="@drawable/icon_password"
                    android:background="@color/transparent"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/confirm_password_lay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_new">

                <com.taxialeairy.provider.Utilities.MyEditText
                    android:id="@+id/new_password"
                    android:inputType="textWebPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/confirm_password"
                    android:textAlignment="viewStart"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:drawableStart="@drawable/icon_password"
                    android:background="@color/transparent"/>
            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:id="@+id/note"
                android:textColor="@color/black_text_color"
                android:layout_marginTop="20dp"
                android:text="@string/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">


            <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="20dp"-->
            <!--&gt;-->
            <!--<ImageView-->
            <!--android:id="@+id/nextIcon"-->
            <!--android:src="@drawable/button_resent_password_ar"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:gravity="end"/>-->
            <!--</LinearLayout>-->
            <com.taxialeairy.provider.Utilities.MyTextView
                android:id="@+id/nextIcon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color_white"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:background="#465295"
                android:text="@string/reset_password"
                android:visibility="visible"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                />

        </RelativeLayout>

    </LinearLayout>

    <!--</ScrollView>-->

</FrameLayout>